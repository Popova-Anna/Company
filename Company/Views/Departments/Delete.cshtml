@model Company.Models.Department

<h3>Уверены, что хотите удалить отдел?</h3>
<div class="form">
    @if (TempData["Problem"]!= null)
    {
        <h2 class="text-danger">@TempData["Problem"]</h2>
        <hr />
    }
    
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentDepartment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentDepartment.Name)
        </dd>
    </dl>
    
    <form class="form " asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Удалить" class=" btn-delete" />
        </div>        
        <a asp-action="Index" class="action-link">К списку отделов</a>
    </form>
</div>

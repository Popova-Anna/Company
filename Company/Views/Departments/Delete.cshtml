@model Company.Models.Department

<h3>Уверены, что хотите удалить отдел?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Code)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ParentDepartment)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ParentDepartment.Name)
        </dd>
    </dl>
    
    <form class="form"  asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="action-delete" /> |
        <a asp-action="Index" class="action-link">К списку отделов</a>
    </form>
</div>
